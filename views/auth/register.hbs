  <br />
  <input type="text" name="email" placeholder="Email" />
  <br />
  <input type="text" name="password" placeholder="Password" />
  <br />
  <input type="text" name="confirmPassword" placeholder="Repeat password" />
  <br />
  <input type="submit" value="Register" />
</form>
<div class="auth">
  <div class="auth__form-wrapper">

    <h2>Register</h2>

    <form class="auth-form" action="/user/register" method="post">
      <div class="auth-form__wrapper">

        <div class="form-group">
          <input class="auth-input" type="text" name="username" />
          <span class="auth-label">Username</span>
        </div>
        <div class="form-group">
          <input class="auth-input" type="email" name="email" />
          <span class="auth-label">Email</span>
        </div>
      </div>
      <div class="auth-form__wrapper">

        <div class="form-group">
          <input class="auth-input" type="password" name="password" />
          <span class="auth-label">Password</span>
        </div>
        <div class="form-group">
          <input class="auth-input" type="password" name="confirmPassword" />
          <span class="auth-label">Confirm Password</span>
        </div>
      </div>
      <button class="auth-btn" type="submit">Register</button>
    </form>
  </div>
</div>
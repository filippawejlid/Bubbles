<form action="/home" method="post">

  <textarea
    name="content"
    cols="30"
    rows="10"
    placeholder="What's in your bubble?..."
  ></textarea>

  <input type="submit" value="Share" />
</form>

{{#each users}}

  <p>
    {{username}}
  </p>
  {{#each posts}}

    <div class="post-container">
      <p class="content">
        {{content}}
      </p>
      <span class="time">
        {{formatDate time}}
      </span>
    </div>

  {{/each}}

{{/each}}
<section class="post-section">
  
    <div class="post">
    <div class="post__info">
      <div class="post__info__author">
        <div class="round-img-container">

          <img src="{{imageUrl}}" alt="" />
        </div>
        <h3 class="author">
          <a href="/home/profile/{{userId}}"> {{postedByUsername}}</a>
        </h3>
      </div>
      <span class="time">{{formatDate createdAt}}</span>
    </div>
    <div class="post__content">
      <p>{{content}}</p>
    </div>
    <div class="single-post__thread-btn" href="/home/posts/{{_id}}">
      {{#if myPost}}
        <div class="single-post__thred-btn__inner">
          <a href="/home/edit-post/{{myPostId}}">
            <i class="fa-solid fa-pen"></i>
          </a>
          <form action="/home/delete-post/{{myPostId}}" method="post">

            <button type="submit">
              <i class="fa-solid fa-trash-can"></i>
            </button>
          </form>
        </div>

      {{/if}}

    </div>
  </div>
</section>

<section class="comments-section">
  <h3>Comments</h3>
  <form class="comment-form" method="post">
    <input
      class="comment-form__input"
      type="text"
      name="text"
      placeholder="Comment..."
    />
    <input class="comment-form__button" type="submit" value="Add comment" />
  </form>
  <div class="comments-wrapper">
    {{#each comments}}

      <div class="comment">
        <div class="comment__info">
          <div class="round-img-container">

            <img src="{{postedBy.imageUrl}}" alt="" />
          </div>
          <div class="comment__info__name-date">
            <a href="/home/profile/{{postedBy._id}}">{{postedBy.username}}</a>
            <span>{{formatDate createdAt}}</span>

          </div>
        </div>
        <p class="comment__text">{{text}}</p>

        {{#allowEdit this.postedBy._id ../user}}

          <div class="single-post__comment-thread-btn">
            <div class="single-post__thred-btn__inner">
              <a href="/home/edit-comment/{{../this._id}}"><i
                  class="fa-solid fa-pen"
                ></i></a>
              <a href="/home/delete-comment/{{../this._id}}"><i
                  class="fa-solid fa-trash-can"
                ></i></a>
            </div>
          </div>

        {{/allowEdit}}
      </div>
    {{/each}}
  </div>
</section>
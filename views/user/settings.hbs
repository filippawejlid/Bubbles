<main class="settings">
  <div class="settings__container">

    <h2>Settings</h2>

    <div class="change-image">
      {{! <h3>Change your profile picture</h3> }}
      <form
        action="/home/settings/change-image"
        method="post"
        enctype="multipart/form-data"
      >
        <fieldset class="auth-fieldset auth-input">
          <label for="image">
            <div class="round-img-container">
              <img
                src="{{imageUrl}}"
                id="output"
                alt="Picture of {{username}}"
              />
            </div>
            Add a profile picture</label>
          <input
            type="file"
            name="image"
            id="image"
            onchange="loadFile(event)"
          />
        </fieldset>
        <button type="submit">Save</button>
        <p class="settings__error">{{errorImage}}</p>
      </form>
    </div>

    <div class="edit-userInfo">
      <div class="change-username">

        <h3>Edit username</h3>

        <form action="/home/settings/edit-username" method="post">

          <input
            type="text"
            name="username"
            value="{{username}}"
            placeholder="Username"
          />

          <button type="submit">Save</button>
        </form>
        <p class="settings__error">{{errorUsername}}</p>
      </div>

      <div class="change-email">
        <h3>Edit email</h3>

        <form action="/home/settings/edit-email" method="post">
          {{!-- {{errorEmail}} --}}
          <input
            type="email"
            name="email"
            value="{{email}}"
            placeholder="Email"
          />

          <button type="submit">Save</button>
        </form>
        <p class="settings__error">{{errorEmail}}</p>
      </div>
    </div>

    <div class="delete-user">
      <button
        type="button"
        class="btn btn-outline-danger"
        data-bs-toggle="modal"
        data-bs-target="#deleteModal"
      >
        Delete user</button>
    </div>
  </div>
</main>

<div
  class="modal fade"
  id="deleteModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalCenterTitle"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Deleting
          {{username}}</h5>
        <button
          type="button"
          class="btn close"
          data-bs-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Are you sure you want to delete your account?
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-bs-dismiss="modal"
        >Close</button>
        <form action="/home/settings/delete" method="post">
          <input class="btn btn-outline-danger" type="submit" value="Delete" />
        </form>
      </div>
    </div>
  </div>
</div>
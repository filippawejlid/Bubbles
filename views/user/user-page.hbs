  <div class="user-profile__info">
    <h2>
      Posts by:
      {{username}}
    </h2>
  </div>

  <div class="user-post-section">
    {{#each userPosts}}

      <div class="user-post">
        <div class="user-post__content">
          <p>{{content}}</p>
        </div>
        <div class="user-post__info">
          {{!-- <span class="time">{{formatDate createdAt}}</span> --}}
          <span>Edit</span>
          <span class="user-post__info__line"></span>
          <span>Delete</span>
        </div>

      </div>

      {{!-- <div>
        <p>
          {{formatDate updatedAt}}
        </p>
        <p> {{content}} </p>
      </div>

      <div class="buttons">
        <a href="/user/edit-post/{{_id}}">Edit bubble</a>
        <form action="/user/delete-post/{{_id}}" method="post">
          <input type="submit" value="Delete bubble" />
        </form>
      </div> --}}

    {{/each}}
